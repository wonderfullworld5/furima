<%= render "shared/second-header" %>

<% if user_signed_in? %>
  <!-- ユーザーがログインしている場合の表示 -->
  <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
<% else %>
  <!-- ユーザーがログインしていない場合の表示 -->
  <%= link_to "新規登録", new_user_registration_path %>
  <%= link_to "ログイン", user_session_path %>
<% end %>
  <%= form_with url: user_session_path, class: 'registration-main', local: true do |f| %>
    <div class='form-wrap'>
      <div class='form-header'>
        <h1 class='form-header-text'>
          会員情報入力
        </h1>
      </div>

      <div class='login-flash-message'>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">メールアドレス</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password, class: "input-default", id: "password", placeholder: "", autocomplete: "current-password" %>
      </div>
      <div class='login-btn'>
        <%= f.submit "ログイン" ,class:"login-red-btn" %>
      </div>
    </div>
  <% end %>
<% end %>

<%= render "shared/second-footer" %>
