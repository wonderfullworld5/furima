<%= form_with model: @purchase_form, url: item_records_path(@item), local: true do |form| %>
  <%= render 'shared/error_messages', model: @purchase_form %>

  <%= form.label :postcode, "郵便番号" %>
  <%= form.text_field :postcode %>

  <%= form.label :area_id, "都道府県" %>
  <%= form.collection_select :area_id, Area.all, :id, :name, prompt: "選択してください" %>

  <%= form.label :city, "市区町村" %>
  <%= form.text_field :city %>

  <%= form.label :street, "番地" %>
  <%= form.text_field :street %>

  <%= form.label :building, "建物名（任意）" %>
  <%= form.text_field :building %>

  <%= form.label :phone, "電話番号" %>
  <%= form.text_field :phone %>

  <%= form.submit "購入する" %>
<% end %>
